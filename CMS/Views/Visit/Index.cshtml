@model IEnumerable<CMS.ViewModels.VisitViewModel>
@{
    ViewData["Title"] = "Manage visits";
}

<h1>Manage visits</h1>
<hr />
<div class="d-flex justify-content-between align-items-center mb-3">
    <a asp-action="Create" class="btn btn-primary">Add new</a>
</div>


@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Visit.VisitTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patient.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Employee.FullName)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr onclick="location.href='@Url.Action("Details", "Visit", new { id = item.Visit.VisitId })';" style="cursor:pointer;">
                    <td>
                        @item.Visit.VisitTime
                    </td>
                    <td>
                        @item.Patient.FullName
                    </td>
                    <td>
                        @item.Employee.FullName
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="spacing row justify-content-center">
        <div class="col-md-6">
            <p class="text-center alert alert-info">No visits found.</p>
        </div>
    </div>
}
