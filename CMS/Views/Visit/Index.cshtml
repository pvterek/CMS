@model IEnumerable<CMS.ViewModels.VisitViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>Visits</h1>
<p>
    <a asp-action="Create">Add new</a>
</p>
@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Visit time</th>
                <th>Patient</th>
                <th>Employee</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Visit.VisitTime
                    </td>
                    <td>
                        @item.Patient.FullName
                    </td>
                    <td>
                        @item.Employee.FullName
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Visit.VisitId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Visit.VisitId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Visit.VisitId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No visits found.</p>
}
