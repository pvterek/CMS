@model CMS.ViewModels.VisitViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Visit details</h1>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Patient)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Patient.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Visit.VisitTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Visit.VisitTime)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model?.Visit.VisitId">Edit</a>
    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@Model?.Visit.VisitId">Delete</a>
</div>
