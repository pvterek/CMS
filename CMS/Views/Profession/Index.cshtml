@model IEnumerable<CMS.Models.Profession>

@{
    ViewData["Title"] = "Manage professions";
}

<h1>Manage professions</h1>
<hr />
<div class="d-flex justify-content-between align-items-center mb-3">
    <a asp-action="Create" class="btn btn-primary">Add new</a>
</div>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) 
        {
                <tr onclick="location.href='@Url.Action("Edit", "Profession", new { id = item.ProfessionId })';" style="cursor:pointer;">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <div class="spacing row justify-content-center">
        <div class="col-md-6">
            <p class="text-center alert alert-info">No professions found.</p>
        </div>
    </div>
}