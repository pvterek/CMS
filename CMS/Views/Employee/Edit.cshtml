@model CMS.ViewModels.EmployeeProfessionViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Employee.EmployeeId" />
            <div class="form-group">
                <label asp-for="Employee.Name" class="control-label"></label>
                <input asp-for="Employee.Name" class="form-control" />
                <span asp-validation-for="Employee.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Surname" class="control-label"></label>
                <input asp-for="Employee.Surname" class="form-control" />
                <span asp-validation-for="Employee.Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Birthday" class="control-label"></label>
                <input asp-for="Employee.Birthday" class="form-control" />
                <span asp-validation-for="Employee.Birthday" class="text-danger"></span>
            </div>
            <div class="form-group spacing">
                <label asp-for="Employee.ProfessionId" class="control-label">Profession</label>
                <select asp-for="Employee.ProfessionId" class="form-control">
                    <option value="">-- Select profession --</option>
                    @foreach (var item in Model.Professions)
                    {
                        <option value="@item.ProfessionId">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="Employee.ProfessionId" class="text-danger"></span>
            </div>
            <div class="form-group spacing">
                <label asp-for="Photo" class="control-label">Photo</label><br />
                <input type="file" asp-for="Photo" class="form-control-file" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
