@model IEnumerable<CMS.Models.Employee>

@{
    ViewData["Title"] = "Manage employees";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1>Manage employees</h1>
    </div>
    <div class="flex-grow-1" style="max-width: 20%;">
        <form asp-controller="Employee" asp-action="Index" method="get" class="search-form d-flex justify-content-end">
            <input type="text" class="form-control" placeholder="Search..." name="employee" aria-label="Search employee">
        </form>
    </div>
</div>
<hr />
<div class="d-flex justify-content-start align-items-center mb-3">
    <div>
        <a asp-action="Create" class="btn btn-primary">Add new</a>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Surname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Birthday)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Profession.Name)
                </th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) 
        {
            <tr onclick="location.href='@Url.Action("Details", "Employee", new { id = item.EmployeeId })';" style="cursor:pointer;">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Birthday)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Profession.Name)
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <div class="spacing row justify-content-center">
        <div class="col-md-6">
            <p class="text-center alert alert-info">No employees found.</p>
        </div>
    </div>
}